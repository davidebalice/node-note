<div class="col-sm-12 col-md-8 col-lg-8 m-auto loginBox">
  <div class="card my-5">
    <form class="p-5 mb-3" method="post" action="/login">
      <div class="form-group">

        {{#if demoMode}}
          <p class="loginMsg">
            <span class="red">Demo mode active</span>
            <br />
            the CRUD operations are not allowed
          </p>
          <div class="loginDemoData">
            <strong>Demo data</strong>:
            <br />
            mario@rossi.it
            <br />
            12345678
          </div>
        {{/if}}

        <label for="email">Email</label>

        <input
          type="email"
          class="form-control"
          name="email"
          aria-describedby="emailHelp"
          value="mario@rossi.it"
        />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" />
      </div>
      <button type="submit" class="btn btn-success">Send</button>
    </form>
  </div>
</div>