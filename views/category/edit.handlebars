<div class="formCard">

  <a href="/categories" class="back-button">
    <button type="submit" class="btn btn-success buttonNote" name="edit"> < Back</button>
  </a>

  <h3 class="my-5 titleSection">Edit category</h3>

        <form
          action="{{base_url}}/edit/category/{{category._id}}?_method=POST"
          method="post"
        >
          <input type="hidden" name="_method" value="POST" />
         
          <div class="form-group">
            <label for="title">
              Title
            </label>
            <input
              type="text"
              id="title"
              class="form-control noteField"
              name="title"
              value="{{category.title}}"
            />
          </div>
         
          <button type="submit" class="btn btn-success buttonNote" name="update">
            Update
          </button>
        </form>

</div>