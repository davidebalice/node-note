<div class="formCard">

  <a href="/add/category" class="back-button">
    <button type="submit" class="btn btn-success buttonNote"> + Add</button>
  </a>

  <h3 class="my-5 titleSection">Categories</h3>

  {{#each category}}
    <div class="card-body mb-1 category">
      <div class="category-int" onclick="$().viewModal('{{_id}}')">
        {{title}}
      </div>
      <div class="categoryButtons">
        <a
          class="btn btn-info"
          href="{{base_url}}/edit/category/{{_id}}"
          data-toggle="tooltip"
          data-placement="top"
          title="Edit"
        >
          <i class="fas fa-pen"></i>
        </a>
        <form
          action="{{base_url}}/delete/category/{{_id}}?_method=DELETE"
          method="post"
          id="deleteForm{{_id}}"
        >
          <input type="hidden" name="_method" value="DELETE" />
          <button
            type="submit"
            class="btn btn-danger pointer"
            data-toggle="tooltip"
            data-placement="top"
            title="Delete"
          >
            <i class="fas fa-trash"></i>
          </button>
        </form>
      </div>
    </div>
  {{else}}
    <div class="text-center">
      <h4 class="mb-5">Category not found</h4>
    </div>
  {{/each}}
</div>